@page
@model Web_App.Pages.Account.LoginModel
@{
}

<h3>Login</h3>
<br />
<div class="container border" style="padding: 20px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CredentialViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="CredentialViewModel.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="CredentialViewModel.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CredentialViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="CredentialViewModel.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="CredentialViewModel.Password"></span>
        </div>
        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox" asp-for="CredentialViewModel.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="CredentialViewModel.RememberMe"></label>
            </div>
            <div class="col-5">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
                <a class="btn btn-link" href="/Account/Register">Sign Up</a>
            </div>
        </div>
        <br />
        <p>
            Social Media Logins:
            <div class="form-group">
                @foreach(var provider in Model.ExternalLoginProviders)
                {
                    <button type="submit" asp-page-handler="LoginExternally" name="provider" value="@provider.Name" class="btn btn-primary">
                        Login with @provider.Name
                    </button>
                }
            </div>
        </p>
    </form>
</div>